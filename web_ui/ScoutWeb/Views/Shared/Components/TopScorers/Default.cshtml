@model IEnumerable<ScoutWeb.Models.TopScorerView>

@*
    VIEWCOMPONENT VIEW: Top Scorers
    Dinamik olarak en iyi golcüleri listeler
*@

<div class="card border-0 hover-lift" style="background: white;">
    <div class="card-header text-white" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
        <h5 class="mb-1 d-flex align-items-center gap-2">
            <i class="bi bi-trophy-fill"></i> En İyi Golcüler
        </h5>
        <small class="opacity-75">İlk @ViewBag.Count Sıra</small>
    </div>
    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="list-group list-group-flush">
                @{ int rank = 1; }
                @foreach (var scorer in Model)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <span class="badge @(rank == 1 ? "bg-warning text-dark" : rank == 2 ? "bg-secondary" : rank == 3 ? "bg-info" : "bg-light text-dark") me-3" style="width: 35px; height: 35px; line-height: 35px; font-size: 1.1rem;">
                                @rank
                            </span>
                            <div>
                                <h6 class="mb-0 fw-bold">@scorer.FullName</h6>
                                <small class="text-muted">
                                    @scorer.Assists Asist |
                                    Maç Başı: @((scorer.GoalsPerMatch ?? 0).ToString("0.00"))
                                </small>
                            </div>
                        </div>
                        <div class="text-end">
                            <span class="badge bg-primary rounded-pill" style="font-size: 1.1rem;">
                                <i class="bi bi-trophy"></i> @scorer.Goals
                            </span>
                        </div>
                    </div>
                    rank++;
                }
            </div>
        }
        else
        {
            <div class="p-3 text-center text-muted">
                <i class="bi bi-inbox"></i> Henüz gol istatistiği yok.
            </div>
        }
    </div>
</div>
