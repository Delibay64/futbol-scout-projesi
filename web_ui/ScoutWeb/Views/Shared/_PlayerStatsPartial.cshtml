@model ScoutWeb.Models.Playerstat

@*
    PARTIALVIEW: Oyuncu istatistiklerini gösterir
    Kullanım: Player/Details.cshtml içinde dinamik olarak yüklenir
*@

@if (Model != null)
{
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-gradient bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-bar-chart-fill"></i> Sezon İstatistikleri
            </h5>
            <small>@Model.Season Sezonu</small>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="stat-box bg-light rounded p-3 text-center">
                        <div class="stat-icon text-primary mb-2">
                            <i class="bi bi-calendar-event" style="font-size: 2rem;"></i>
                        </div>
                        <h3 class="mb-0 fw-bold text-dark">@Model.MatchesPlayed</h3>
                        <p class="text-muted mb-0 small">Maç</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-box bg-light rounded p-3 text-center">
                        <div class="stat-icon text-success mb-2">
                            <i class="bi bi-trophy-fill" style="font-size: 2rem;"></i>
                        </div>
                        <h3 class="mb-0 fw-bold text-dark">@Model.Goals</h3>
                        <p class="text-muted mb-0 small">Gol</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-box bg-light rounded p-3 text-center">
                        <div class="stat-icon text-info mb-2">
                            <i class="bi bi-hand-thumbs-up-fill" style="font-size: 2rem;"></i>
                        </div>
                        <h3 class="mb-0 fw-bold text-dark">@Model.Assists</h3>
                        <p class="text-muted mb-0 small">Asist</p>
                    </div>
                </div>
            </div>

            <hr class="my-3">

            <div class="row g-3">
                <div class="col-md-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="bi bi-clock text-warning" style="font-size: 1.5rem;"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-0">@Model.MinutesPlayed dk</h6>
                            <small class="text-muted">Oynadığı Süre</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <span class="badge bg-warning text-dark" style="font-size: 1.5rem; width: 40px;">@Model.YellowCards</span>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-0">Sarı Kart</h6>
                            <small class="text-muted">Disiplin</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <span class="badge bg-danger" style="font-size: 1.5rem; width: 40px;">@Model.RedCards</span>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-0">Kırmızı Kart</h6>
                            <small class="text-muted">Cezalar</small>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.MatchesPlayed > 0)
            {
                <div class="alert alert-info mt-3 mb-0">
                    <strong>Performans:</strong>
                    Maç başı ortalama @String.Format("{0:0.00}", (double)(Model.Goals ?? 0) / Model.MatchesPlayed) gol,
                    @String.Format("{0:0.00}", (double)(Model.Assists ?? 0) / Model.MatchesPlayed) asist
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i> Bu oyuncu için henüz istatistik bulunmuyor.
    </div>
}
