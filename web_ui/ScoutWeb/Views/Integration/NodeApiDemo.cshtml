@{
    ViewData["Title"] = "Node.js REST API Demo";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-success">
                <i class="bi bi-server"></i> Node.js REST API Entegrasyonu
            </h2>
            <p class="text-muted">ASP.NET Core → Node.js Express API → PostgreSQL</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
        </div>
    </div>

    <!-- API Durumu -->
    <div class="row mb-4">
        <div class="col-12">
            @if (ViewBag.ApiStatus == "success")
            {
                <div class="alert alert-success">
                    <i class="bi bi-check-circle-fill"></i>
                    <strong>Başarılı!</strong> Node.js API'den veri çekildi.
                </div>
            }
            else if (ViewBag.ApiStatus == "error")
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>Hata!</strong> @ViewBag.ErrorMessage
                    <hr>
                    <small>Node.js API çalışmıyor olabilir. <code>START_NODEJS_API.bat</code> dosyasını çalıştırın.</small>
                </div>
            }
        </div>
    </div>

    <!-- Teknik Detaylar -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-gear"></i> Teknik Detaylar
                    </h6>
                </div>
                <div class="card-body">
                    <table class="table table-sm mb-0">
                        <tr>
                            <th width="40%">Kaynak</th>
                            <td>ASP.NET Core MVC</td>
                        </tr>
                        <tr>
                            <th>Hedef</th>
                            <td>Node.js Express API</td>
                        </tr>
                        <tr>
                            <th>Protokol</th>
                            <td>HTTP/REST</td>
                        </tr>
                        <tr>
                            <th>Method</th>
                            <td>HttpClient GET</td>
                        </tr>
                        <tr>
                            <th>Endpoint</th>
                            <td><code>GET /api/players</code></td>
                        </tr>
                        <tr>
                            <th>Veri Kaynağı</th>
                            <td>PostgreSQL (Node.js üzerinden)</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h6 class="mb-0">
                        <i class="bi bi-code-slash"></i> Controller Kodu
                    </h6>
                </div>
                <div class="card-body">
                    <pre class="mb-0" style="font-size: 0.85rem;"><code>// IntegrationController.cs

var client = _httpClientFactory.CreateClient();
var response = await client.GetAsync(
    "http://localhost:3000/api/players"
);

var json = await response.Content
    .ReadAsStringAsync();

var data = JsonSerializer
    .Deserialize&lt;JsonElement&gt;(json);</code></pre>
                </div>
            </div>
        </div>
    </div>

    <!-- Oyuncu Listesi -->
    @if (ViewBag.ApiStatus == "success")
    {
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0">
                    <i class="bi bi-people"></i> Oyuncular (Node.js API'den Gelen Veri)
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Oyuncu Adı</th>
                                <th>Pozisyon</th>
                                <th>Yaş</th>
                                <th>Piyasa Değeri</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var player in ViewBag.Players.EnumerateArray())
                            {
                                <tr>
                                    <td>@player.GetProperty("player_id").GetInt32()</td>
                                    <td>
                                        <strong>@player.GetProperty("full_name").GetString()</strong>
                                    </td>
                                    <td>
                                        @{
                                            var hasPosition = player.TryGetProperty("position", out System.Text.Json.JsonElement posElement);
                                        }
                                        <span class="badge bg-secondary">
                                            @(hasPosition ? posElement.GetString() : "-")
                                        </span>
                                    </td>
                                    <td>
                                        @{
                                            var hasAge = player.TryGetProperty("age", out System.Text.Json.JsonElement ageElement);
                                        }
                                        @(hasAge ? ageElement.GetInt32().ToString() : "-")
                                    </td>
                                    <td>
                                        @{
                                            var hasValue = player.TryGetProperty("current_market_value", out System.Text.Json.JsonElement valueElement);
                                        }
                                        @if (hasValue && !valueElement.ValueKind.Equals(System.Text.Json.JsonValueKind.Null))
                                        {
                                            var valueStr = valueElement.GetString();
                                            if (!string.IsNullOrEmpty(valueStr) && decimal.TryParse(valueStr, out decimal marketValue))
                                            {
                                                <span class="badge bg-success">
                                                    €@String.Format("{0:N0}", marketValue)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-light">
                <small class="text-muted">
                    <i class="bi bi-info-circle"></i>
                    Veri Akışı: PostgreSQL → Node.js (Port 3000) → ASP.NET Core MVC → Razor View
                </small>
            </div>
        </div>
    }

    <!-- RAW JSON Response -->
    @if (ViewBag.ApiStatus == "success")
    {
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-dark text-white">
                <h6 class="mb-0">
                    <i class="bi bi-braces"></i> RAW JSON Response
                </h6>
            </div>
            <div class="card-body">
                <pre class="mb-0" style="max-height: 300px; overflow-y: auto;"><code>@ViewBag.ApiResponse</code></pre>
            </div>
        </div>
    }
</div>
