@model IEnumerable<ScoutWeb.Models.Scoutreport>

@{
    ViewData["Title"] = "Scout Raporları";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-primary">
                <i class="bi bi-file-earmark-text"></i> Scout Raporlarım
            </h2>
            <p class="text-muted">Oluşturduğunuz oyuncu değerlendirme raporları</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle"></i> Yeni Rapor Oluştur
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Oyuncu</th>
                                <th>Takım</th>
                                <th>Tahmin Değer</th>
                                <th>Durum</th>
                                <th>Tarih</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("Details", "Player", new { id = item.PlayerId })" class="text-decoration-none">
                                            <strong>@item.Player?.FullName</strong>
                                        </a>
                                    </td>
                                    <td>@item.Player?.Team?.TeamName</td>
                                    <td>
                                        <span class="badge bg-success">
                                            €@String.Format("{0:N0}", item.PredictedValue)
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.IsApproved)
                                        {
                                            <span class="badge bg-success">Onaylandı</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Beklemede</span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @item.ReportDate?.ToString("dd.MM.yyyy HH:mm")
                                        </small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Details", "Player", new { id = item.PlayerId })"
                                               class="btn btn-outline-primary"
                                               title="Oyuncu Detayı">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@item.ReportId" method="post" style="display:inline"
                                                  onsubmit="return confirm('Bu raporu silmek istediğinize emin misiniz?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger btn-sm"
                                                        title="Raporu Sil">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; opacity: 0.3;"></i>
                <h4 class="text-muted mt-3">Henüz rapor oluşturmadınız</h4>
                <p class="text-muted">Oyuncu detay sayfasından "Scout Raporu Oluştur" butonuna tıklayın</p>
                <a asp-action="Create" class="btn btn-success mt-3">
                    <i class="bi bi-plus-circle"></i> İlk Raporu Oluştur
                </a>
            </div>
        </div>
    }
</div>
