@model IEnumerable<ScoutWeb.Models.YoungTalentView>

@{
    ViewData["Title"] = "Genç Yetenekler";
}

<div class="container mt-4">
    <h2><i class="bi bi-star-fill text-warning"></i> Genç Yetenekler (23 Yaş Altı)</h2>
    <p class="text-muted">
        <i class="bi bi-database"></i> Veri Kaynağı: <code>vw_YoungTalents</code> PostgreSQL View
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-star"></i> @item.FullName</h5>
                        <p class="card-text">
                            <strong>Yaş:</strong> <span class="badge bg-info">@item.Age</span><br>
                            <strong>Pozisyon:</strong> @item.Position<br>
                            <strong>Uyruk:</strong> @item.Nationality<br>
                            <strong>Değer:</strong> <span class="badge bg-success">€@item.CurrentMarketValue?.ToString("N0")</span>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>

    <a href="/Reports/AdminDashboard" class="btn btn-secondary mt-3">
        <i class="bi bi-arrow-left"></i> Geri Dön
    </a>
</div>