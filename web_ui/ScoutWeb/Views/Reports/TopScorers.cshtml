@model List<ScoutWeb.Models.TopScorerReport>

@{
    ViewData["Title"] = "Gol Krall覺覺";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-success fw-bold"><i class="bi bi-trophy-fill"></i> Gol Krall覺覺 (Top 20)</h2>
        <a asp-controller="Players" asp-action="Index" class="btn btn-outline-dark">Listeye D繹n</a>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 text-center align-middle">
                <thead class="bg-success text-white">
                    <tr>
                        <th>#</th>
                        <th class="text-start">Oyuncu</th>
                        <th>Gol</th>
                        <th>Asist</th>
                        <th>Ma癟 Ba覺 Ort.</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int rank = 1; }
                    @foreach (var item in Model)
                    {
                        <tr class="@(rank <= 3 ? "table-warning fw-bold" : "")">
                            <td>
                                @if(rank == 1) { <span></span> }
                                else if(rank == 2) { <span></span> }
                                else if(rank == 3) { <span></span> }
                                else { @rank }
                            </td>
                            <td class="text-start">@item.FullName</td>
                            <td class="fs-5 text-success">@item.Goals</td>
                            <td class="text-muted">@item.Assists</td>
                            <td><span class="badge bg-light text-dark border">@item.GoalsPerMatch.ToString("0.00")</span></td>
                        </tr>
                        { rank++; }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>