@section Scripts {
    <script>
        function makePrediction() {
            var btn = document.getElementById("btnPredict");
            var resultBox = document.getElementById("predictionResult");
            
            // Butonu kilitle
            btn.disabled = true;
            btn.innerHTML = "â³ HesaplanÄ±yor...";
            
            // Oyuncu ID'sini al
            var playerId = @Model.PlayerId;

            // Ä°steÄŸi gÃ¶nder
            fetch('/Player/PredictPrice?id=' + playerId, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.status === "success") {
                    var deger = new Intl.NumberFormat('tr-TR', { style: 'currency', currency: 'EUR' }).format(data.tahmini_deger);
                    
                    resultBox.className = "alert alert-success mt-3";
                    resultBox.innerHTML = "<strong>ğŸ¯ Tahmini DeÄŸer:</strong> <br/>" + deger;
                } else {
                    resultBox.className = "alert alert-danger mt-3";
                    resultBox.innerHTML = "Hata: " + (data.message || "Bilinmeyen hata");
                }
            })
            .catch(error => {
                resultBox.className = "alert alert-danger mt-3";
                resultBox.innerHTML = "BaÄŸlantÄ± HatasÄ±! Python servisi aÃ§Ä±k mÄ±?";
            })
            .finally(() => {
                btn.disabled = false;
                btn.innerHTML = "<i class='bi bi-robot'></i> Tekrar Tahmin Yap";
            });
        }

        // --- YENÄ°: SCOUT RAPORU OLUÅTUR (sp_CreateScoutReport kullanÄ±mÄ±) ---
        function createScoutReport() {
            const predictedValue = parseFloat(document.getElementById('scoutPredictedValue').value);
            const notes = document.getElementById('scoutNotes').value;

            if (!predictedValue || predictedValue <= 0) {
                alert('LÃ¼tfen geÃ§erli bir deÄŸer tahmini girin!');
                return;
            }

            fetch('/Player/CreateScoutReport', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `playerId=@Model.PlayerId&predictedValue=${predictedValue}&notes=${encodeURIComponent(notes)}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.status === 'success') {
                    alert('âœ“ ' + data.message);
                    document.getElementById('scoutPredictedValue').value = '';
                    document.getElementById('scoutNotes').value = '';
                } else {
                    alert('âœ— ' + data.message);
                }
            })
            .catch(error => {
                alert('Hata: ' + error);
            });
        }

        // Modal aÃ§ma butonlarÄ± ekle
        document.addEventListener('DOMContentLoaded', function() {
            const cardBody = document.querySelector('.card-body');
            if (cardBody) {
                const buttonGroup = document.createElement('div');
                buttonGroup.className = 'd-flex gap-2 mb-3';
                buttonGroup.innerHTML = `
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#updateStatsModal">
