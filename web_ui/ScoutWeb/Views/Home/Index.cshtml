@{
    ViewData["Title"] = "Ana Sayfa - Futbol Scout Sistemi";
}

@*
    HOME/INDEX VIEW: Ana sayfa
    VIEWCOMPONENT KULLANIMI: TopScorersViewComponent ile dinamik içerik
*@

<div class="container-fluid py-4">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-lg-12">
            <div class="hero-section text-center">
                <div class="container">
                    <h1 class="display-3 fw-bold mb-3 animate__animated animate__fadeInDown">
                        <i class="bi bi-trophy-fill"></i> Futbol Scout Sistemi
                    </h1>
                    <p class="lead mb-4 fs-4">
                        Oyuncu yeteneklerini keşfedin, istatistikleri analiz edin ve raporlarınızı oluşturun
                    </p>
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <div class="d-flex gap-3 justify-content-center flex-wrap">
                            <a asp-controller="Player" asp-action="Index" class="btn btn-light btn-lg shadow">
                                <i class="bi bi-people-fill"></i> Oyuncular
                            </a>
                            <a asp-controller="Teams" asp-action="Index" class="btn btn-outline-light btn-lg">
                                <i class="bi bi-shield-fill"></i> Takımlar
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex gap-3 justify-content-center flex-wrap">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-warning btn-lg shadow">
                                <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                            </a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">
                                <i class="bi bi-person-plus-fill"></i> Kayıt Ol
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Gerçek Zamanlı Döviz Kuru -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow hover-lift" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
                <div class="card-body py-4 text-white">
                    <div class="row align-items-center">
                        <div class="col-lg-2 col-md-3 text-center mb-3 mb-md-0">
                            <i class="bi bi-currency-exchange" style="font-size: 4rem; opacity: 0.9;"></i>
                        </div>
                        <div class="col-lg-10 col-md-9">
                            <div class="row align-items-center">
                                <div class="col-md-7">
                                    <h4 class="mb-2 fw-bold">
                                        <i class="bi bi-broadcast-pin"></i> Canlı Döviz Kuru
                                    </h4>
                                    <small id="exchangeUpdateTime" class="opacity-75">
                                        <i class="bi bi-clock-history"></i> Yükleniyor...
                                    </small>
                                </div>
                                <div class="col-md-5 text-md-end mt-3 mt-md-0">
                                    <div class="display-5 fw-bold mb-1" id="exchangeRate">
                                        <span class="spinner-border spinner-border-sm"></span>
                                    </div>
                                    <div class="opacity-75">1 EUR = ? TRY</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- İstatistikler ve ViewComponent -->
    <div class="row">
        <!-- Sol Kolon: Özellikler -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 h-100 hover-lift">
                <div class="card-header text-white">
                    <h5 class="mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-stars"></i> Sistem Özellikleri
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start p-3 rounded hover-lift" style="background: linear-gradient(135deg, #f8f9ff 0%, #fff 100%);">
                                <div class="flex-shrink-0">
                                    <div class="stat-icon">
                                        <i class="bi bi-people-fill"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-bold mb-2">Oyuncu Yönetimi</h6>
                                    <p class="text-muted small mb-0">
                                        Oyuncu profilleri, istatistikler ve performans takibi
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-start p-3 rounded hover-lift" style="background: linear-gradient(135deg, #f0fff4 0%, #fff 100%);">
                                <div class="flex-shrink-0">
                                    <div class="stat-icon">
                                        <i class="bi bi-graph-up-arrow"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-bold mb-2">Detaylı İstatistikler</h6>
                                    <p class="text-muted small mb-0">
                                        Gol, asist, kart ve maç istatistikleri
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-start p-3 rounded hover-lift" style="background: linear-gradient(135deg, #f0f9ff 0%, #fff 100%);">
                                <div class="flex-shrink-0">
                                    <div class="stat-icon">
                                        <i class="bi bi-file-text-fill"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-bold mb-2">Scout Raporları</h6>
                                    <p class="text-muted small mb-0">
                                        Detaylı oyuncu değerlendirme raporları oluşturun
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-start p-3 rounded hover-lift" style="background: linear-gradient(135deg, #fffbeb 0%, #fff 100%);">
                                <div class="flex-shrink-0">
                                    <div class="stat-icon">
                                        <i class="bi bi-shield-fill-check"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-bold mb-2">Takım Yönetimi</h6>
                                    <p class="text-muted small mb-0">
                                        Takım kadroları ve oyuncu transferleri
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-start p-3 rounded hover-lift" style="background: linear-gradient(135deg, #fef2f2 0%, #fff 100%);">
                                <div class="flex-shrink-0">
                                    <div class="stat-icon">
                                        <i class="bi bi-robot"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-bold mb-2">AI Tahminleme</h6>
                                    <p class="text-muted small mb-0">
                                        Makine öğrenmesi ile oyuncu potansiyel analizi
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-start p-3 rounded hover-lift" style="background: linear-gradient(135deg, #f8fafc 0%, #fff 100%);">
                                <div class="flex-shrink-0">
                                    <div class="stat-icon">
                                        <i class="bi bi-shield-lock-fill"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-bold mb-2">Güvenlik</h6>
                                    <p class="text-muted small mb-0">
                                        Rol bazlı erişim kontrolü ve veri güvenliği
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sağ Kolon: VIEWCOMPONENT KULLANIMI -->
        <div class="col-lg-4 mb-4">
            @*
                VIEWCOMPONENT KULLANIMI
                TopScorersViewComponent ile en iyi 10 golcüyü dinamik olarak göster
                count parametresi ile kaç oyuncu gösterileceğini belirtebilirsiniz
            *@
            @await Component.InvokeAsync("TopScorers", new { count = 10 })
        </div>
    </div>

    <!-- Hızlı Linkler -->
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="card border-0 hover-lift">
                    <div class="card-header text-white">
                        <h5 class="mb-0 d-flex align-items-center gap-2">
                            <i class="bi bi-lightning-charge-fill"></i> Hızlı Erişim
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row text-center g-3">
                            <div class="col-lg-3 col-md-6">
                                <a asp-controller="Player" asp-action="Create" class="btn btn-success w-100 py-4 hover-lift">
                                    <i class="bi bi-person-plus-fill d-block mb-2" style="font-size: 2.5rem;"></i>
                                    <span class="fw-bold">Yeni Oyuncu Ekle</span>
                                </a>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <a asp-controller="Teams" asp-action="Create" class="btn btn-primary w-100 py-4 hover-lift">
                                    <i class="bi bi-shield-plus d-block mb-2" style="font-size: 2.5rem;"></i>
                                    <span class="fw-bold">Yeni Takım Ekle</span>
                                </a>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <a asp-controller="Player" asp-action="Index" class="btn btn-info w-100 py-4 hover-lift">
                                    <i class="bi bi-search d-block mb-2" style="font-size: 2.5rem;"></i>
                                    <span class="fw-bold">Oyuncu Ara</span>
                                </a>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <a asp-controller="ScoutReport" asp-action="Index" class="btn btn-warning w-100 py-4 hover-lift">
                                    <i class="bi bi-file-earmark-text-fill d-block mb-2" style="font-size: 2.5rem;"></i>
                                    <span class="fw-bold">Raporlarım</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Gerçek zamanlı döviz kuru çekme
        async function loadExchangeRate() {
            try {
                const response = await fetch('http://localhost:3000/api/exchange/EUR/TRY');
                const data = await response.json();

                if (data.status === 'success') {
                    const rate = data.conversion_rate;
                    const lastUpdate = data.note || data.time_last_update_utc;

                    // Kur bilgisini güncelle
                    document.getElementById('exchangeRate').innerHTML =
                        `₺${rate.toFixed(2)}`;

                    // Güncelleme zamanını göster
                    document.getElementById('exchangeUpdateTime').innerHTML =
                        `<i class="bi bi-clock"></i> ${lastUpdate}`;
                } else {
                    throw new Error(data.message || 'Veri çekilemedi');
                }
            } catch (error) {
                console.error('Döviz kuru hatası:', error);
                document.getElementById('exchangeRate').innerHTML =
                    '<small class="text-warning">Bağlantı hatası</small>';
                document.getElementById('exchangeUpdateTime').innerHTML =
                    '<small>Node.js API çalışmıyor olabilir</small>';
            }
        }

        // Sayfa yüklendiğinde çalıştır
        document.addEventListener('DOMContentLoaded', loadExchangeRate);

        // Her 60 saniyede bir güncelle
        setInterval(loadExchangeRate, 60000);
    </script>
}

