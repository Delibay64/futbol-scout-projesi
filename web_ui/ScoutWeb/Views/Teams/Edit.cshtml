@model ScoutWeb.Models.Team

@{
    ViewData["Title"] = $"{Model.TeamName} - Düzenle";
}

@*
    TEAMS/EDIT VIEW: Takım bilgilerini düzenleme formu
    Model Binding ve UPDATE işlemi
    Form validation ve AntiForgeryToken
*@

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Başlık -->
            <div class="mb-4">
                <h2 class="text-warning">
                    <i class="bi bi-pencil-square"></i> Takım Düzenle
                </h2>
                <p class="text-muted">@Model.TeamName takımının bilgilerini güncelleyin</p>
            </div>

            <!-- Geri Dön Butonu -->
            <div class="mb-3">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Takımlara Dön
                </a>
                <a asp-action="Details" asp-route-id="@Model.TeamId" class="btn btn-outline-primary">
                    <i class="bi bi-eye"></i> Detaylara Dön
                </a>
            </div>

            <!-- TempData Mesajları -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Form Kartı -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-shield-fill"></i> Takım Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="TeamId" />

                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Takım Adı -->
                        <div class="mb-4">
                            <label asp-for="TeamName" class="form-label fw-bold">
                                <i class="bi bi-shield"></i> Takım Adı
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="TeamName" class="form-control form-control-lg"
                                   placeholder="Örn: Galatasaray, Fenerbahçe, Beşiktaş"
                                   required />
                            <span asp-validation-for="TeamName" class="text-danger small"></span>
                        </div>

                        <!-- Ülke -->
                        <div class="mb-4">
                            <label asp-for="Country" class="form-label fw-bold">
                                <i class="bi bi-globe"></i> Ülke
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Country" class="form-control"
                                   placeholder="Örn: Türkiye, İngiltere, İspanya"
                                   required />
                            <span asp-validation-for="Country" class="text-danger small"></span>
                        </div>

                        <!-- Lig -->
                        <div class="mb-4">
                            <label asp-for="LeagueName" class="form-label fw-bold">
                                <i class="bi bi-trophy"></i> Lig Adı
                            </label>
                            <input asp-for="LeagueName" class="form-control"
                                   placeholder="Örn: Süper Lig, Premier League, La Liga" />
                            <span asp-validation-for="LeagueName" class="text-danger small"></span>
                            <small class="form-text text-muted">
                                Opsiyonel - Boş bırakılabilir
                            </small>
                        </div>

                        <hr class="my-4" />

                        <!-- Butonlar -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Details" asp-route-id="@Model.TeamId" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i>
                        <span class="text-danger">*</span> işaretli alanlar zorunludur
                    </small>
                </div>
            </div>

            <!-- Bilgilendirme Kartı -->
            <div class="alert alert-warning mt-4" role="alert">
                <h6 class="alert-heading">
                    <i class="bi bi-exclamation-triangle"></i> Dikkat
                </h6>
                <p class="mb-0">
                    Takım bilgilerini değiştirmek, bu takıma ait oyuncuları etkilemez.
                    Oyuncu atamaları aynı kalacaktır.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Form submit animasyonu
        $('form').on('submit', function() {
            var submitBtn = $(this).find('button[type="submit"]');
            submitBtn.prop('disabled', true);
            submitBtn.html('<span class="spinner-border spinner-border-sm me-2"></span>Güncelleniyor...');
        });

        // TempData mesajlarını otomatik kapat
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
