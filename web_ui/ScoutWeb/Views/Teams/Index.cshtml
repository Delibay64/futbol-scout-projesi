@model IEnumerable<ScoutWeb.Models.Team>

@{
    ViewData["Title"] = "Takımlar";
}

@*
    TEAMS/INDEX VIEW: Tüm takımları listeler
    ViewBag.TotalTeams ve ViewBag.TotalPlayers kullanımı gösterilir
    Tam CRUD işlemleri: Create, Details, Edit, Delete butonları
*@

<div class="container-fluid py-4">
    <!-- Başlık ve İstatistikler -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-primary">
                <i class="bi bi-shield-fill"></i> Takımlar
            </h2>
            <p class="text-muted">
                Sistemdeki tüm takımları yönetin
            </p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle"></i> Yeni Takım Ekle
            </a>
        </div>
    </div>

    <!-- ViewBag Kullanımı - İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Toplam Takım</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.TotalTeams</h2>
                        </div>
                        <div>
                            <i class="bi bi-shield-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 mb-1">Toplam Oyuncu</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.TotalPlayers</h2>
                        </div>
                        <div>
                            <i class="bi bi-people-fill" style="font-size: 3rem; opacity: 0.3;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- TempData Mesajları -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Takım Listesi -->
    @if (Model != null && Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0">
                    <i class="bi bi-list-ul"></i> Takım Listesi
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th><i class="bi bi-shield"></i> Takım Adı</th>
                                <th><i class="bi bi-globe"></i> Ülke</th>
                                <th><i class="bi bi-trophy"></i> Lig</th>
                                <th><i class="bi bi-people"></i> Oyuncu Sayısı</th>
                                <th class="text-end"><i class="bi bi-gear"></i> İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var team in Model)
                            {
                                <tr>
                                    <td>
                                        <strong class="text-primary">@team.TeamName</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@team.Country</span>
                                    </td>
                                    <td>
                                        <small class="text-muted">@(team.LeagueName ?? "-")</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info rounded-pill">
                                            @team.Players.Count oyuncu
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@team.TeamId"
                                               class="btn btn-outline-primary"
                                               title="Detaylar">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@team.TeamId"
                                               class="btn btn-outline-warning"
                                               title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@team.TeamId" method="post" style="display:inline"
                                                  onsubmit="return confirm('[@team.TeamName] takımını silmek istediğinize emin misiniz?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Sil">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-white text-muted">
                <small>
                    <i class="bi bi-info-circle"></i>
                    Toplam <strong>@ViewBag.TotalTeams</strong> takım listeleniyor
                </small>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; opacity: 0.3;"></i>
                <h4 class="text-muted mt-3">Henüz takım eklenmemiş</h4>
                <p class="text-muted">Yeni bir takım eklemek için yukarıdaki butonu kullanın</p>
                <a asp-action="Create" class="btn btn-success mt-3">
                    <i class="bi bi-plus-circle"></i> İlk Takımı Ekle
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // TempData mesajlarını otomatik kapat (5 saniye sonra)
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
