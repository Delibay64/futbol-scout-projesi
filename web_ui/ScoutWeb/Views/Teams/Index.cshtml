@model IEnumerable<ScoutWeb.Models.Team>

@{
    ViewData["Title"] = "Takımlar";
}

@*
    TEAMS/INDEX VIEW: Tüm takımları listeler
    ViewBag.TotalTeams ve ViewBag.TotalPlayers kullanımı gösterilir
    Tam CRUD işlemleri: Create, Details, Edit, Delete butonları
*@

<div class="container-fluid py-4">
    <!-- Başlık ve İstatistikler -->
    <div class="row mb-4 align-items-center">
        <div class="col-md-8">
            <h2 class="mb-1">
                <span class="gradient-text">
                    <i class="bi bi-shield-fill"></i> Takımlar
                </span>
            </h2>
            <p class="text-muted mb-0">
                <i class="bi bi-gear"></i> Sistemdeki tüm takımları yönetin
            </p>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
            <a asp-action="Create" class="btn btn-success btn-lg hover-lift">
                <i class="bi bi-shield-plus"></i> Yeni Takım Ekle
            </a>
        </div>
    </div>

    <!-- ViewBag Kullanımı - İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-lg-6 mb-3 mb-lg-0">
            <div class="stat-card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="opacity-75 mb-2">Toplam Takım</div>
                        <div class="stat-number text-white">@ViewBag.TotalTeams</div>
                    </div>
                    <div>
                        <i class="bi bi-shield-fill" style="font-size: 4rem; opacity: 0.2;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="stat-card" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white;">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="opacity-75 mb-2">Toplam Oyuncu</div>
                        <div class="stat-number text-white">@ViewBag.TotalPlayers</div>
                    </div>
                    <div>
                        <i class="bi bi-people-fill" style="font-size: 4rem; opacity: 0.2;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- TempData Mesajları -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Takım Listesi -->
    @if (Model != null && Model.Any())
    {
        <div class="card border-0 hover-lift">
            <div class="card-header text-white">
                <h5 class="mb-0 d-flex align-items-center gap-2">
                    <i class="bi bi-list-ul"></i> Takım Listesi
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th><i class="bi bi-shield-fill"></i> Takım Adı</th>
                                <th><i class="bi bi-globe-americas"></i> Ülke</th>
                                <th><i class="bi bi-trophy-fill"></i> Lig</th>
                                <th><i class="bi bi-people-fill"></i> Oyuncu Sayısı</th>
                                <th class="text-end"><i class="bi bi-gear-fill"></i> İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var team in Model)
                            {
                                <tr>
                                    <td>
                                        <strong class="text-primary">
                                            <i class="bi bi-shield me-2"></i>@team.TeamName
                                        </strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-flag"></i> @team.Country
                                        </span>
                                    </td>
                                    <td class="text-muted">
                                        @(team.LeagueName ?? "-")
                                    </td>
                                    <td>
                                        <span class="badge bg-info rounded-pill">
                                            <i class="bi bi-people"></i> @team.Players.Count oyuncu
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="Details" asp-route-id="@team.TeamId"
                                           class="btn btn-sm btn-primary me-1"
                                           title="Detaylar">
                                            <i class="bi bi-eye-fill"></i> Detay
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@team.TeamId"
                                           class="btn btn-sm btn-warning me-1"
                                           title="Düzenle">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@team.TeamId" method="post" style="display:inline"
                                              onsubmit="return confirm('[@team.TeamName] takımını silmek istediğinize emin misiniz?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" title="Sil">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer text-center" style="background: #f8f9fa;">
                <small class="text-muted">
                    <i class="bi bi-info-circle-fill"></i>
                    Toplam <strong class="text-primary">@ViewBag.TotalTeams</strong> takım listeleniyor
                </small>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 hover-lift text-center py-5">
            <div class="card-body">
                <div class="mb-4">
                    <i class="bi bi-inbox" style="font-size: 5rem; opacity: 0.2;"></i>
                </div>
                <h4 class="text-muted mb-3">Henüz takım eklenmemiş</h4>
                <p class="text-muted mb-4">Yeni bir takım eklemek için butona tıklayın</p>
                <a asp-action="Create" class="btn btn-success btn-lg">
                    <i class="bi bi-shield-plus"></i> İlk Takımı Ekle
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // TempData mesajlarını otomatik kapat (5 saniye sonra)
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
